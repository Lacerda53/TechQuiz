@model Quiz.Areas.Admin.Models.Questao

@{
    ViewData["Title"] = "Edit";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Edit the Question
        <small>Edit the registred questions.</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-file-text-o"></i> Questions</a></li>
        <li><a href="#">Edit</a></li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">

        <div class="box-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Editar" asp-controller="Questao" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Enunciado" class="control-label"></label>
                            <input asp-for="Enunciado" class="form-control" />
                            <span asp-validation-for="Enunciado" class="text-danger"></span>
                        </div>
                        <input asp-for="IDQuestao" type="hidden" class="form-control" />
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-default">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
