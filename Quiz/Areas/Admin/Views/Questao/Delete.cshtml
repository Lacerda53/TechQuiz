@model Quiz.Areas.Admin.Models.Questao

@{
    ViewData["Title"] = "Delete";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Details of question
        <small>Details of quetion.</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-file-text-o"></i> Questions</a></li>
        <li><a href="#">Edit</a></li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">

        <div class="box-body">
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Enunciado)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Enunciado)
                    </dd>
                </dl>

                <form asp-action="Deletar" method="post">
                    @Html.HiddenFor(model => model.IDQuestao)
                    <input type="submit" value="Delete" class="btn btn-success" /> 
                    <a asp-action="Index" class="btn btn-default">Back</a>
                </form>
            </div>
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->