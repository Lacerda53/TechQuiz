@model IEnumerable<Quiz.Areas.Admin.Models.Alternativa>

@{
    ViewData["Title"] = "Index";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        List of Alternatives
        <small>List of all registred alternatives.</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-check-square-o"></i> Alternatives</a></li>
        <li><a href="#">List</a></li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-body">
            <p>
                <a asp-action="Create" asp-area="Admin" asp-controller="Alternativa" method="post" class="btn btn-success">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Resposta)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Correta)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IDQuestao)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @Html.HiddenFor(modelItem => item.IDAlternativa)
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Resposta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Correta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IDQuestao)
                            </td>
                            <td>
                                <span class="pull-right">
                                    @Html.ActionLink(" ", "Edit", new { IDAlternativa = item.IDAlternativa }, new { @class = "btn btn-warning fa fa-pencil", @title = "Editar" }) |
                                    @Html.ActionLink(" ", "Details", new { IDAlternativa = item.IDAlternativa }, new { @class = "btn btn-primary fa fa-file", @title = "Detalhes" }) |
                                    @Html.ActionLink(" ", "Delete", new { IDAlternativa = item.IDAlternativa }, new { @class = "btn btn-danger fa fa-trash", @title = "Deletar" })
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
