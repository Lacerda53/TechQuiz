@model Quiz.Areas.Admin.Models.Alternativa

@{
    ViewData["Title"] = "Create";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Regiter a alternative
        <small>Create the alternative.</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-check-square-o"></i> Alternatives</a></li>
        <li><a href="#">Create</a></li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">

        <div class="box-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Resposta" class="control-label"></label>
                            <input asp-for="Resposta" class="form-control" />
                            <span asp-validation-for="Resposta" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input asp-for="Correta" /> @Html.DisplayNameFor(model => model.Correta)
                                </label>
                            </div>
                        </div>
                        <div class="form-group"> <!--dropdown-->
                            <label asp-for="IDQuestao" class="control-label"></label>
                            <br />
                            <select asp-for="IDQuestao" asp-items="@ViewBag.Questao" class="btn bg-gray-light" >
                                <option selected>Select a question</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-default">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->