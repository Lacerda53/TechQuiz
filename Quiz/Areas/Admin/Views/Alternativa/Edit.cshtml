@model Quiz.Areas.Admin.Models.Alternativa

@{
    ViewData["Title"] = "Edit";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Edit the Question
        <small>Edit the registred questions.</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-check-square-o"></i> Questions</a></li>
        <li><a href="#">Edit</a></li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">

        <div class="box-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Editar" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Resposta" class="control-label"></label>
                            <input asp-for="Resposta" class="form-control" />
                            <span asp-validation-for="Resposta" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input asp-for="Correta" /> @Html.DisplayNameFor(model => model.Correta)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            
                            <input asp-for="IDQuestao" type="hidden" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input asp-for="IDAlternativa" type="hidden" class="form-control" />
                            <input type="submit" value="Save" class="btn btn-success" />
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->